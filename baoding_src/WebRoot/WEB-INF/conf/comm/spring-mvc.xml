<!-- 		静态资源处理器 -->
		<mvc:resources location="/comm/" mapping="/comm/**" cache-period="31556926"/>
		<mvc:resources location="/a_*/" mapping="/a_*/**" cache-period="31556926"/>
		<mvc:resources location="/b_*/" mapping="/b_*/**" cache-period="31556926"/>
</beans>